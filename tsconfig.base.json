{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2020",
        "module": "esnext",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2020",
            "dom"
        ],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@cooking-recipe/api-interfaces": [
                "libs/api-interfaces/src/index.ts"
            ],
            "@authentication/nest-auth": [
                "libs/nest-auth/src/index.ts"
            ],
            "@authentication/ng-auth": [
                "libs/ng-auth/src/index.ts"
            ],
            "@authentication/common-auth": [
                "libs/common-auth/src/index.ts"
            ]
        },
        "resolveJsonModule": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": [
        "node_modules",
        "tmp"
    ]
}